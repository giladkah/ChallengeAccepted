<h1>Listing menu_items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menu_items.each do |menu_item| %>
  <tr>
    <td><%= menu_item.name %></td>
    <td><%= menu_item.price %></td>
    <td><%= link_to 'Show', [menu_item.brand, menu_item] %></td>
    <td><%= link_to 'Edit', edit_brand_menu_item_path(menu_item.brand, menu_item) %></td>
    <td><%= link_to 'Destroy', [menu_item.brand, menu_item], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

